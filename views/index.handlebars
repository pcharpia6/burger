<div class="jumbotron jumbotron-fluid">
  <div class="container">
        <h1>Burgers</h1>
  </div>
</div>


<div class="container">

  <div class="row">
    <div class="col-md-5 custom-border available">
      <div class="row">
        <div class="col-md-12 custom-title">
          <h2>Eat Me.</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <ul>
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
              {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-5 custom-border devoured">
      <div class="row">
        <div class="col-md-12 custom-title">
          <h2>Eaten.</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">      
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-5">
      <div class="add-a-burger">
        <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name">
          </div>

          <button type="submit">Add Burger</button>
        </form>
      </div>
    </div>
  </div>
  
  

</div>
